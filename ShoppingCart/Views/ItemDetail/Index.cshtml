@model ShoppingCart.Models.Product
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shop</h2>

<h2>
    Online Store
</h2>
<div style="display:inline-block">
    <div style="width:190px; float:left;">
        <img src="@Model.Image" width="170" height="276" alt="@Model.ProductName" title="@Model.ProductName">
    </div>
    <div style="width:70%; float:left;">
        <h1>
            @Html.DisplayFor(modelItem => Model.ProductName)
        </h1>
        <p>
            @*@Html.DisplayFor(modelItem => Model.Details)*@
            @Html.Raw(@Model.Details)
        </p>
        <p>
            $@Html.DisplayFor(modelItem => Model.Price)
        </p>
    </div>
</div>


